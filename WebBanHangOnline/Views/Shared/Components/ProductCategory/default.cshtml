@model IEnumerable<WebBanHangOnline.Data.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    <div class="banner">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="banner_item align-items-center" style="background-image: url(@WebBanHangOnline.Common.ClassParamater.PathProductCategoryImage/@item.Icon)">
                            <div class="banner_category">
                                <a href="@WebBanHangOnline.Common.ClassParamater.PathProduct?id=@(item.ProductCategoryId)">@item.Title</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}